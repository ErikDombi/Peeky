{
  "manifest_version": 3,

  "name": "Peeky",
  "description": "Open XRAY Partials in VS Code quickly with the context menu",
  "version": "1.0",

  "action": {
    "default_icon": "icon.png"
  },
  
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png",
    "256": "icon.png"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "contextMenus",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
